{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@theme/*": ["src/theme/*"],
      "@assets/*": ["src/assets/*"],
      "@slices/*": ["src/store/slices/*"],
      "@endpoints/*": ["src/store/endpoints/*"],
      "@redux-store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@convex/*": ["./convex/*"]
    }
  }
}
